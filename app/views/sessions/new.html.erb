<h1> Sign In </h1>

<%= form_tag("/create", method: "get") do %>
<%= text_field_tag(:phone, '', :placeholder => "sign in with your phone") %>
<%= text_field_tag(:pin,'', :placeholder => "enter your PIN") %>
<%= submit_tag("Log In") %>
<% end %>

<h2>Forgot your PIN?</h2>

<%= link_to("Get a new one", :forgot_user) %>